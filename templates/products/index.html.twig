{% extends 'base.html.twig' %}

{% block title %}Hello ProductsController!{% endblock %}

{% block body %}

    <div class="container-fluid" xmlns="http://www.w3.org/1999/html">
        <div class="row">
            <div class="col-2">
                <div class="row">
                    <div class="col">
                        <h4>Categor√≠as</h4>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <ul class="list-group">
                            {% for category in categories %}
                                <a class="list-group-item" href="#">{{ category.title }}</a>
                            {% endfor %}
                        </ul>
                    </div>
                </div>

            </div>
            <div class="col">
                <div class="row">
                    <div class="col">
                        <h2>Productos</h2>
                    </div>
                </div>
                <div class="row">
                    {% for product in products %}
                        <div class="col-4">
                            <a href="{{ path('app_products_show-product', {'title': product.title, 'id': product.identifier}) }}">
                                <div class="card">
                                    <img src="{{ product.picture }}" alt="HTTP Cliente" class="card-img-top">
                                    <div class="card-body">
                                        <h5 class="card-title">{{ product.title }}</h5>
                                        <p class="card-text">{{ product.details }}</p>
                                    </div>
                                </div>
                            </a>

                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>


    </div>
{% endblock %}
